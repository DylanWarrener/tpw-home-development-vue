{
	"compilerOptions": {
		/* Type Checking */
		"noImplicitAny": false,
		"noImplicitThis": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		/* Modules */
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		//"resolveJsonModule": true,
		"paths": {
			"@src/*": ["./src/*"],
			"@assets/*": ["./src/assets/*"],
			"@components/*": ["./src/components/*"],
			"@constants/*": ["./src/constants/*"],
			"@locales/*": ["./src/locales/*"],
			"@pages/*": ["./src/pages/*"],
			"@plugins/*": ["./src/plugins/*"],
			"@stores/*": ["./src/stores/*"],
			"@themes/*": ["./src/themes/*"],
			"@utils/*": ["./src/utils/*"],
			"@declaration/*": ["./src/declaration/*"],
			"@enums/*": ["./src/enums/*"],
			"@styles/*": ["./src/styles/*"]
		},
		"types": ["node"],

		/* Emit */
		"importsNotUsedAsValues": "remove",
		"noEmit": true,
		"sourceMap": true,

		/* JavaScript support */
		"allowJs": true,

		/* Interop Constraints */
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,

		/* Language and Environment */
		"jsx": "preserve",
		"target": "ESNEXT"

		/* Completeness */
		//"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "src/**/*.vue"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
